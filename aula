

function cadastro (){
    var nomeDoAbrigo = prompt ("Qual o nome do abrigo")
    var endereço = prompt("Qual o endereço?")
    var telefone = (prompt("Qual o telefone?"))
    var capacidade = Number(prompt("Qual a capacidade de lotação do abrigo?"))
    var cidadeDoAbrigo = prompt("Qual a cidade?")

    var objetoAbrigo = {
        nome: nomeDoAbrigo,
        endereço: endereço,
        telefone: telefone,
        lotaçao: capacidade,
        capacidade: cidadeDoAbrigo,
        cidade: cidadeDoAbrigo
    }
    arrayAbrigos.push(objetoAbrigo)
    alert("Abrigo cadastrado!")

}

function lista (objetoAbrigo){

for (let i = 0; i<arrayAbrigos.length; i++){
var objetoAbrigo = arrayAbrigos[i]

var resultado ="Lista de Abrigos: \n"
resultado += [`Código: ${i} - Nome: ${objetoAbrigo.nome}, Endereço: ${objetoAbrigo.endereço}, Telefone: ${objetoAbrigo.telefone}, Capacidade: ${objetoAbrigo.capacidade},Cidade: ${objetoAbrigo.cidade}\n`]
}
    return alert(resultado)
}
    
